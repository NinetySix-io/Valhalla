{
  "name": "odin",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "scripts": {
    "dev": "turbo run dev --no-cache --parallel --continue",
    "dev:odin": "npm run dev -- --scope=odin",
    "dev:thor": "npm run dev -- --scope=thor",
    "dev:heimdallr": "npm run dev -- --scope=heimdallr",
    "build": "turbo run build",
    "build:odin": "turbo run build --scope=odin",
    "build:thor": "turbo run build --scope=thor",
    "build:heimdallr": "turbo run build --scope=heimdallr",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^2.6.2",
    "turbo": "^1.2.1"
  }
}
