{
  "name": "valhalla",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "scripts": {
    "dev": "turbo run dev --no-cache --parallel --continue",
    "ext:services": "sh scripts/run.ext.services.sh",
    "build": "turbo run build --include-dependencies --no-deps",
    "build:packages": "turbo run build --filter=./packages/*",
    "build:web.thor": "turbo run build --scope=web.thor --include-dependencies --no-deps",
    "build:web.loki": "turbo run build --scope=web.loki --include-dependencies --no-deps",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "copy:entities": "node scripts/copy.entities",
    "copy:clients": "node scripts/copy.clients",
    "copy": "npm run copy:entities && npm run copy:clients"
  },
  "devDependencies": {
    "@types/node": "^17.0.33",
    "minimist": "^1.2.6",
    "prettier": "^2.6.2",
    "turbo": "^1.2.9",
    "vercel": "^24.2.2"
  }
}
