{
  "name": "valhalla",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "scripts": {
    "dev": "turbo run dev --no-cache --parallel --continue",
    "dev:all": "npm run dev -- --filter=./apps/*",
    "dev:serv": "npm run dev -- --filter=./apps/serv.*",
    "ext:services": "sh ./scripts/run.ext.services.sh",
    "ext:services:down": "sh ./scripts/shutdown.ext.services.sh",
    "build": "turbo run build --include-dependencies --no-deps",
    "build:packages": "turbo run build --filter=./packages/*",
    "build:serv": "turbo run build --filter=./apps/serv.*",
    "build:web": "turbo run build --filter=./apps/web.*",
    "build:web.thor": "turbo run build --scope=web.thor --include-dependencies --no-deps",
    "build:web.loki": "turbo run build --scope=web.loki --include-dependencies --no-deps",
    "build:clients": "turbo run build --filter=./packages/serv.clients",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "proto:generate": "node scripts/generate.proto",
    "copy:clients": "npm run proto:generate && node scripts/copy.clients && npm run build:clients",
    "copy": "npm run copy:entities && npm run copy:clients"
  },
  "devDependencies": {
    "@types/lodash.camelcase": "^4.3.7",
    "@types/node": "^17.0.33",
    "minimist": "^1.2.6",
    "prettier": "^2.6.2",
    "ts-proto": "^1.112.1",
    "turbo": "^1.2.9",
    "vercel": "^24.2.2"
  },
  "dependencies": {
    "lodash.camelcase": "^4.3.0"
  },
  "pnpm": {
    "overrides": {
      "glob-parent@<5.1.2": ">=5.1.2",
      "follow-redirects@<1.14.8": ">=1.14.8",
      "follow-redirects@<1.14.7": ">=1.14.7",
      "axios@<0.21.1": ">=0.21.1",
      "trim@<0.0.3": ">=0.0.3",
      "axios@<0.21.2": ">=0.21.2",
      "trim-newlines@<3.0.1": ">=3.0.1"
    }
  }
}
