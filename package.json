{
  "name": "odin",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "scripts": {
    "dev": "turbo run dev --no-cache --parallel --continue",
    "dev:odin": "npm run dev -- --scope=odin",
    "dev:thor": "npm run dev -- --scope=thor",
    "dev:loki": "npm run dev -- --scope=loki",
    "build": "turbo run build",
    "build:odin": "turbo run build --scope=odin --include-dependencies --no-deps",
    "build:thor": "turbo run build --scope=thor --include-dependencies --no-deps",
    "build:loki": "turbo run build --scope=loki --include-dependencies --no-deps",
    "deploy:thor": "vercel deploy ./apps/thor --prod",
    "deploy:loki": "vercel deploy ./apps/loki --prod",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^2.6.2",
    "turbo": "^1.2.1",
    "vercel": "^24.1.0"
  }
}
