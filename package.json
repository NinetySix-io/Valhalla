{
  "name": "valhalla",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "scripts": {
    "dev": "turbo run dev --no-cache --parallel --continue",
    "dev:serv.odin": "npm run dev -- --scope=serv.odin",
    "dev:web.thor": "npm run dev -- --scope=web.thor",
    "dev:web.loki": "npm run dev -- --scope=web.loki",
    "build": "turbo run build",
    "build:serv.odin": "turbo run build --scope=serv.odin --include-dependencies --no-deps",
    "build:web.thor": "turbo run build --scope=web.thor --include-dependencies --no-deps",
    "build:web.loki": "turbo run build --scope=web.loki --include-dependencies --no-deps",
    "deploy:web.thor": "vercel deploy ./apps/web.thor --prod",
    "deploy:web.loki": "vercel deploy ./apps/web.loki --prod",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^2.6.2",
    "turbo": "^1.2.8",
    "vercel": "^24.2.0"
  }
}
