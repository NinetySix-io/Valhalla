{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": true
  },
  "extends": "../tsconfig/base.json",
  "include": ["src/*"],
  "exclude": ["dist", "build", "node_modules"]
}
